{
  "name": "@j5/chromatic",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/chromatic/src",
  "targets": {
    "chromatic": {
      "executor": "nx:run-commands",
      "options": {
        "command": "chromatic"
      },
      "dependsOn": ["build-storybook", "chromatic:fetch"]
    },
    "chromatic:fetch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "git fetch --unshallow"
      }
    },
    "build-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm storybook build --stats-json",
        "cwd": "libs/chromatic"
      }
    }
  },
  "tags": []
}
