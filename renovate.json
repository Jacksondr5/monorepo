{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    "config:recommended",
    ":configMigration",
    "group:monorepos",
    "replacements:all",
    "workarounds:all"
  ],
  "automergeType": "pr",
  "packageRules": [
    {
      "dependencyDashboardApproval": true,
      "matchUpdateTypes": ["major"]
    },
    {
      "automerge": true,
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchCurrentVersion": "!/^0/",
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "minimumReleaseAge": "1 month"
    },
    {
      "groupName": "all v0 dependencies",
      "dependencyDashboardApproval": true,
      "matchCurrentVersion": "/^0/",
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "1 month"
    }
  ],
  "schedule": ["* 1 * * 0"],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
