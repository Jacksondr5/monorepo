{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "inlineSources": true,
    "types": ["node"],
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2021"],
    "noEmit": false
  },
  "include": ["src/**/*.ts", "plugin.ts"],
  "exclude": ["dist", "node_modules"]
}
